{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "prefer-const": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": ["warn", 2],
    "max-len": ["error", {"code": 120}],
    "import/order": [
      "error",
      {
          "groups": [
              "builtin",
              "external",
              "internal",
              "parent",
              "sibling",
              "index",
              "object",
              "type"
          ],
          "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}